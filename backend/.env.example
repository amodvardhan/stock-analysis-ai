# =============================================================================
# AI Hub - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real secrets to version control
# =============================================================================

# -------------------------
# Database Configuration
# -------------------------
DATABASE_URL=postgresql://aihub_user:aihub_password_2025@localhost:5432/aihub_stock_intelligence
REDIS_URL=redis://localhost:6379

# -------------------------
# LLM Provider Configuration
# -------------------------
# Primary: OpenAI (you can add more providers later)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini  # Cost-effective for PoC, upgrade to gpt-4-turbo for production
OPENAI_TEMPERATURE=0.1    # Low temperature for financial analysis (more deterministic)

# -------------------------
# Stock Market Data APIs
# -------------------------
# Alpha Vantage (Free tier: 25 requests/day, 5 requests/minute)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key-here

# Yahoo Finance (no key needed, using yfinance library)
# NSE India (no key needed for basic data)

# -------------------------
# Notification Services
# -------------------------
# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM=noreply@aihub.com

# SMS (Twilio - optional for PoC)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# -------------------------
# Security
# -------------------------
SECRET_KEY=your-secret-key-here-min-32-chars-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -------------------------
# LLM Observability
# -------------------------
LANGSMITH_API_KEY=your-langsmith-key-here  # Optional but recommended
LANGSMITH_PROJECT=aihub-stock-intelligence
LANGSMITH_TRACING_V2=true

# -------------------------
# Application Settings
# -------------------------
ENVIRONMENT=development  # development | staging | production
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:5173  # React dev servers
